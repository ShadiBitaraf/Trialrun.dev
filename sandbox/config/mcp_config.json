{
    "mcpServers": {
      "jetski": {
        "url": "https://jetski-api.trialrun.dev",
        "capabilities": {
          "tools": [
            {
              "name": "jetski.create_workspace",
              "description": "Create a new Jetski workspace",
              "input_schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the workspace"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the workspace"
                  }
                },
                "required": ["name"]
              }
            },
            {
              "name": "jetski.list_workspaces",
              "description": "List all available Jetski workspaces",
              "input_schema": {
                "type": "object",
                "properties": {}
              }
            }
          ]
        }
      },
      "weather": {
        "url": "https://weather-api.example.com",
        "capabilities": {
          "tools": [
            {
              "name": "weather.get_forecast",
              "description": "Get weather forecast for a location",
              "input_schema": {
                "type": "object",
                "properties": {
                  "location": {
                    "type": "string",
                    "description": "The location to get the forecast for"
                  }
                },
                "required": ["location"]
              }
            }
          ]
        }
      },
      "local_tool": {
        "command": "python",
        "args": ["local_tool.py"],
        "capabilities": {
          "tools": [
            {
              "name": "local_tool.echo",
              "description": "Echo a message",
              "input_schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string",
                    "description": "Message to echo"
                  }
                },
                "required": ["message"]
              }
            }
          ]
        }
      }
    }
  }
  